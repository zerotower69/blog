{
  "name": "react-blog",
  "version": "1.0.0",
  "description": "Blog of zerotower with react.",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "clear": "rimraf node_modules",
    "prepare": "husky install",
    "commit": "cz",
    "lint": "pnpm run -C apps/web lint"
  },
  "keywords": [
    "blog",
    "react",
    "nest",
    "MySQL",
    "websocket",
    "echarts"
  ],
  "author": "zerotower",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "only-allow": "^1.2.1",
    "rimraf": "^5.0.5"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.12.0",
    "pnpm": ">=8.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
