{
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": true
  },
  "exclude": ["node_modules"],
  "include": ["src/index.ts","locales/**/*.json"]
}